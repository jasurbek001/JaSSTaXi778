<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reg_layout"
    >
        <View
            android:id="@+id/logo_view"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/logoda"
            app:layout_constraintLeft_toLeftOf="@id/guide_right1"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:text="Biz bilan hamkorlik qiling va qulay pul toping!"
            android:textColor="#1B1B1B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="@+id/guide_right1"
            app:layout_constraintTop_toTopOf="@+id/logo_view"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />


        <View
            android:id="@+id/reg__view"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@drawable/round_new"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guide_top1"
            />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@+id/guide_top1"
        app:layout_constraintBottom_toBottomOf="parent "
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/zor"
                android:background="@drawable/bosh_back"
                >

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.25"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />



            <TextView
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Parolingizni kiriting!"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="@+id/guide_left"
                app:layout_constraintTop_toTopOf="@+id/register_btn" />

            <TextView
                android:id="@+id/parol_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginRight="150dp"
                android:text="Ro'yhatdan o'tganmisiz?"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/register_btn" />

            <EditText
                android:id="@+id/parol_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:inputType="textPersonName"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/parol_txt"
                tools:ignore="MissingConstraints,RtlCompat" />

            <TextView
                android:id="@+id/parol_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginRight="260dp"
                android:text="Parol"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.857"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/tel_edit" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tel_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:inputType="phone"
                android:hint="+998999774800"
                android:textSize="20dp"
                app:layout_constraintHorizontal_bias="0.292"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/tel_txt"
                tools:ignore="MissingConstraints,RtlCompat" />

            <TextView
                android:id="@+id/tel_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginRight="40dp"
                android:text="Telefon raqam"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/input" />

            <EditText
                android:id="@+id/avto_raqam"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="50A123BC"
                android:inputType="textPersonName"
                android:textSize="20dp"
                app:layout_constraintRight_toRightOf="@+id/guide_left"                app:layout_constraintTop_toTopOf="@+id/avto_txt"
                tools:ignore="MissingConstraints,RtlCompat,RtlHardcoded,RtlSymmetry,SpUsage" />
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"                android:id="@+id/input"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintStart_toEndOf="@+id/avto_raqam"
                app:layout_constraintStart_toStartOf="@id/guide_right"
                app:layout_constraintTop_toTopOf="@id/avto_txt"
                tools:ignore="MissingConstraints,RtlCompat">

                <AutoCompleteTextView
                    android:inputType="none"
                    android:id="@+id/kam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_baseline_directions_car_24"
                    android:text="Spark"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/avto_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginRight="120dp"
                android:text="Avtomobil turi va raqami"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/passport_edit" />

            <EditText
                android:id="@+id/passport_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:drawableStart="@drawable/ic_baseline_description_24"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp"

                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/passport_txt"
                tools:ignore="MissingConstraints,RtlCompat" />

            <TextView
                android:id="@+id/passport_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginRight="110dp"
                android:text="Passport seriya va raqami"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/familiya_edit"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/familiya_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:drawableStart="@drawable/ic_baseline24"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/familiya_txt"
                tools:ignore="MissingConstraints,RtlCompat" />

            <TextView
                android:id="@+id/familiya_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginRight="260dp"
                android:text="Familiya"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@id/ism_edit"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ism_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginRight="160dp"
                android:text="Ism"
                android:textColor="#1B1B1B"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/reg_txt"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/ism_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:drawableStart="@drawable/ic_baseline24"
                android:inputType="textPersonName"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/ism_txt"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/reg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="130dp"
                android:text="Ro'yhatdan o'tish"
                android:textColor="#1B1B1B"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/guide_top"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_radius"
                android:text="Ro'yhatdan o'tish"
                android:textColor="@color/oq"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/guide_right"
                app:layout_constraintTop_toTopOf="@+id/parol_edit" />
            </androidx.constraintlayout.widget.ConstraintLayout>>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>



