<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TarxiBuyurtma"
    android:background="#E5E5E5"
    android:id="@+id/buyurtmalar"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constr">
        <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="buyurtmalar"
        android:textColor="@color/qora"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/view5"
        app:layout_constraintLeft_toLeftOf="@+id/view5"
        app:layout_constraintRight_toRightOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/dona"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/leftgui"
        app:layout_constraintGuide_percent=".1"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rightgui"
        app:layout_constraintGuide_percent=".9"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topgui"
        app:layout_constraintGuide_percent=".35"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ortagui"
        app:layout_constraintGuide_percent=".5"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bugun"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:background="@drawable/chala_round"
        android:textSize="14sp"
        android:text="Bugungilik"
        app:layout_constraintLeft_toLeftOf="@+id/leftgui"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        tools:ignore="MissingConstraints"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hafta"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:background="@drawable/chala_round"
        android:textSize="14sp"
        android:text="Haftalik"
        app:layout_constraintLeft_toLeftOf="@+id/bugun"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/oylik"
        android:layout_marginTop="70dp"
        tools:ignore="MissingConstraints"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/oylik"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:background="@drawable/chala_round"
        android:textSize="14sp"
        android:text="Oylik"
        app:layout_constraintRight_toRightOf="@+id/rightgui"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        tools:ignore="MissingConstraints"
        />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/leftgui"
        app:layout_constraintTop_toTopOf="@+id/bugun"
        app:layout_constraintRight_toRightOf="@+id/ortagui"
        android:layout_marginTop="70dp"
        android:background="@drawable/tola_round"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="@+id/bugun"
        app:layout_constraintLeft_toLeftOf="@+id/ortagui"
        app:layout_constraintRight_toRightOf="@+id/rightgui"
        android:layout_marginTop="70dp"
        android:background="@drawable/tola_round"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/dona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintLeft_toLeftOf="@+id/view5"
        app:layout_constraintRight_toRightOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5"
        android:textColor="@color/qora"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/summa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/qora"
        app:layout_constraintRight_toRightOf="@id/view6"
        app:layout_constraintLeft_toLeftOf="@id/view6"
        app:layout_constraintTop_toTopOf="@id/view6"/>

    <TextView
        android:id="@+id/buyurtmalar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Bugungi buyurtmalar"
        android:textColor="@color/qora"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/leftgui"
        app:layout_constraintTop_toTopOf="@+id/view5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ishlandi"
        app:layout_constraintBottom_toBottomOf="@id/view6"
        app:layout_constraintRight_toRightOf="@id/view6"
        app:layout_constraintLeft_toLeftOf="@id/view6"
        app:layout_constraintTop_toTopOf="@id/view6"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints"
        android:textSize="14sp"/>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="@+id/topgui"
    app:layout_constraintLeft_toLeftOf="@id/leftgui"
    app:layout_constraintRight_toRightOf="@id/rightgui"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/tarix_recycle"
    tools:ignore="MissingConstraints"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/menu_bosh"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>