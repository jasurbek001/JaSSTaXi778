<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Verify"
    android:background="@drawable/bosh_back">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_right1"
        app:layout_constraintGuide_percent="0.1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/onga"
        app:layout_constraintGuide_percent="0.9"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ortaga"
        app:layout_constraintGuide_percent="0.4"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/pastga"
        app:layout_constraintGuide_percent="0.5"
        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/oxiriga"
        app:layout_constraintGuide_percent="0.7"
        />
    <View
        android:id="@+id/logo_1"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/logocha"
        app:layout_constraintLeft_toLeftOf="@id/guide_right1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="350dp"
        android:gravity="center"
        android:textColor="@color/qora"
        android:layout_height="wrap_content"
        android:text="Telefon raqamingizga kelgan       6 raqamlik kodni kiriting"
        app:layout_constraintLeft_toLeftOf="@id/guide_right1"
        app:layout_constraintBottom_toBottomOf="@id/ortaga"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/onga"
        tools:ignore="MissingConstraints" />

    <com.chaos.view.PinView
        android:id="@+id/id_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemCount="6"
        android:layout_margin="10dp"
        android:itemBackground="#FFCC19"
        android:cursorVisible="true"
        app:lineColor="#1b1b1b"
        android:textColor="#1F1F1F"
        android:inputType="number"
        app:hideLineWhenFilled="true"
        style="@style/PinWidget.PinView"
        app:itemRadius="10dp"
        app:layout_constraintLeft_toLeftOf="@id/guide_right1"
        app:layout_constraintTop_toTopOf="@id/pastga"
        app:layout_constraintRight_toRightOf="@id/onga"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifyBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Kirish"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:layout_margin="40dp"
        android:textColor="#1b1b1b"
        android:background="@drawable/round_sorcle"
        app:layout_constraintTop_toTopOf="@id/oxiriga"
        app:layout_constraintLeft_toLeftOf="@id/guide_right1"
        app:layout_constraintRight_toRightOf="@id/onga"
        tools:ignore="MissingConstraints" />






</androidx.constraintlayout.widget.ConstraintLayout>