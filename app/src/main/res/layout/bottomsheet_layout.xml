<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/green"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/haqiqatdan_ham_boshlashni_hohlaysizmi"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bot_no_btn"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_new"
        android:shadowColor="@color/green"
        android:text="@string/no"
        android:textColor="@color/green"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintRight_toLeftOf="@id/bot_ok_btn"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bot_ok_btn"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_radius"
        android:shadowColor="@color/green"
        android:text="@string/ok"
        android:textColor="@color/green"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/bot_no_btn"
        app:layout_constraintRight_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>